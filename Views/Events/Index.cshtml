@model IEnumerable<EventEase2.Models.Event>
@{
    ViewData["Title"] = "Events";
    var query = Context.Request.Query;
}

<h1>Events</h1>

<form method="get">
    <div class="form-group">
        <label for="searchString">Search events...</label>
        <input type="text" name="searchString" class="form-control" value="@query["searchString"]" placeholder="Search events..." />
    </div>

    <div class="form-group">
        <label for="venueId">Venue</label>
        <select name="venueId" class="form-control">
            <option value="">ALL Venues</option>
            @foreach (var venue in ViewBag.Venues)
            {
                <option value="@venue.VenueId" selected="@(venue.VenueId.ToString() == query["venueId"] ? "selected" : null)">
                    @venue.VenueName
                </option>
            }
        </select>
    </div>


    <div class="form-group">
        <label for="startDate">Start Date (From)</label>
        <input type="date" name="startDate" class="form-control" value="@query["startDate"]" />
    </div>

    <div class="form-group">
        <label for="endDate">End Date (To)</label>
        <input type="date" name="endDate" class="form-control" value="@query["endDate"]" />
    </div>

    <button type="submit" class="btn btn-dark">Apply Filters</button>
    <a asp-action="Index" class="btn btn-light">Clear</a>
</form>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Event</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Date</th>
            <th>Venue</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.EventName</td>
            <td>@item.EventDescription</td>
            <td>@item.EventDate.ToString("yyyy-MM-dd")</td>
            <td>@item.Venue?.VenueName</td>
            <td>
                @if (!string.IsNullOrEmpty(item.Venue?.ImageUrl))
                {
                    <img src="@item.Venue.ImageUrl" alt="Venue Image" style="max-height: 60px;" />
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EventId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EventId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EventId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
