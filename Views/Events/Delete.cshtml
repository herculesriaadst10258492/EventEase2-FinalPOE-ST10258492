@model EventEase2.Models.Event
@{
    ViewData["Title"] = "Delete Event";
}
<h1>Delete Event</h1>
<h3>Are you sure you want to delete this event?</h3>
<div>
    <h4>@Model.EventName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.EventDescription</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.EventDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Venue</dt>
        <dd class="col-sm-10">@Model.Venue?.VenueName</dd>
    </dl>
</div>
<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="EventId" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
