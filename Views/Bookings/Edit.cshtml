@model EventEase2.Models.Booking
@{
    ViewData["Title"] = "Edit Booking";
}
<h1>Edit Booking</h1>
<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="BookingId" />
    <div class="form-group">
        <label asp-for="AttendeeName" class="control-label"></label>
        <input asp-for="AttendeeName" class="form-control" />
        <span asp-validation-for="AttendeeName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AttendeeEmail" class="control-label"></label>
        <input asp-for="AttendeeEmail" class="form-control" />
        <span asp-validation-for="AttendeeEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EventId" class="control-label">Event</label>
        <select asp-for="EventId" class="form-control" asp-items="ViewBag.EventId"></select>
        <span asp-validation-for="EventId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
