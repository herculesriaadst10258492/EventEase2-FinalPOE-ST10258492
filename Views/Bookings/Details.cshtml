@model EventEase2.Models.Booking
@{
    ViewData["Title"] = "Booking Details";
}
<h1>Booking Details</h1>
<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Attendee</dt>
        <dd class="col-sm-10">@Model.AttendeeName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.AttendeeEmail</dd>

        <dt class="col-sm-2">Event</dt>
        <dd class="col-sm-10">@Model.Event?.EventName</dd>

        <dt class="col-sm-2">Venue</dt>
        <dd class="col-sm-10">@Model.Event?.Venue?.VenueName</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Event?.EventDate.ToString("yyyy-MM-dd")</dd>
    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.BookingId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
